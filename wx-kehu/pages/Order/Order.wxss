/* pages/Order/Order.wxss */
page {
	background: rgba(237, 237, 237, 1);
}

.card {
	display: block;
	width: 750rpx;
	height: 210rpx;
	background: #ffffff;
	margin-top: 20rpx;
}

.card_top {
	height: 130rpx;
	display: flex;
	flex-flow: row nowrap;
	border-bottom: 1rpx solid rgba(237, 237, 237, 1);
}

.center text {
	display: block;
	font-size: 28rpx;
	margin-top: 20rpx;
	color: rgba(0, 0, 0, 1);
	text-align: left;
}

.center text:last-child {
	color: rgba(198, 198, 198, 1);
	font-size: 24rpx;
}

.card_bottom {
	display: flex;
	height: 80rpx;
	flex-flow: row-reverse nowrap;
}

.card_bottom view {
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	margin-top: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 0;
	outline: none;
	text-align: center;
	box-sizing: border-box;
	font-size: 28rpx;
	margin-right: 20rpx;
	padding-bottom: 10rpx;
}

.red {
	color: rgba(255, 0, 0, 1);
	border: 1rpx solid rgba(255, 0, 0, 1);
}

.blue {
	color: rgba(0, 126, 233, 1);
	border: 1rpx solid rgba(0, 126, 233, 1);
}

.left {
	width: 130rpx;
}

.left>image {
	width: 90rpx;
	height: 90rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.right text {
	display: block;
	text-align: left;
	position: absolute;
	right: 24rpx;
	font-size: 24rpx;
}

.succes {
	color: rgba(0, 126, 233, 1);
}

.faile {
	color: rgba(255, 0, 0, 1);
}

.right text:last-child {
	font-size: 32rpx;
	margin-top: 70rpx;
	color: rgba(0, 0, 0, 1);
}

/* 测试顶部导航栏操作 */
.tab {
	float: left;
	width: 20%;
	text-align: center;
	height: 90rpx;
	line-height: 90rpx;
	padding: 10rpx 0;
}

/* 定位选项卡位置 */
.topTabSwiper {
	zoom: 1;
	font-size: 28rpx;
	color: rgba(172, 172, 172, 1);
	background: #ffffff;
	position: fixed;
	width: 100%;
	z-index: 999;
	box-sizing: border-box;
}

swiper-item {
	top: 95rpx;
	bottom: 200rpx;
}

.topTabSwiper:after {
	content: "";
	display: block;
	clear: both;
}

.tabBorer {
	border-bottom: 1px solid rgba(0, 126, 233, 1);
	color: rgba(0, 126, 233, 1);
}

.swiper {
	width: 100%;
}

.swiper_con {
	text-align: center;
	width: 100%;
	height: 100%;
}
