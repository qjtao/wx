/**index.wxss**/
/* 头像布局 */
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.userinfo-avatar {
	width: 150rpx;
	height: 150rpx;
	margin: 20rpx;
	transition: 1s;
	border-radius: 50%;
	margin-top: 35%;
	box-shadow: 0 0 20rpx rgb(255, 255, 255) inset;
}

.avatarUtoo {
	animation: avatar 3s linear infinite;
}

.userinfo-img {
	width: 260rpx;
	height: 260rpx;
	margin: 20rpx;
	border-radius: 50%;
	margin-top: 30%;
	box-shadow: 0 0 20rpx rgb(18, 139, 209);
}

.userinfo-nickname {
	color: #aaa;
	font-size: 28rpx;
}

.usermotto {
	margin-top: 200px;
}

.aa {
	margin-top: 10%;
	background: red;
	width: 40%;
	font-size: 24rpx;
	color: rgb(255, 255, 255);
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 auto;
	border-radius: 40rpx;
	margin-bottom: -60rpx !important;
	box-shadow: 0 0 20rpx white inset;
}

@keyframes avatar {
	0% {
		/* transform:rotate(0); */
		box-shadow: 0 0 20rpx rgba(0, 204, 255, 0.2);
	}

	50% {
		/* transform: rotate(360deg); */
		box-shadow: 0 0 100rpx rgb(5, 150, 207);
	}

	100% {
		/* transform: rotate(0deg); */
		box-shadow: 0 0 20rpx rgba(0, 204, 255, 0.2);
	}
}

page {
	background: #dfdfdf;
	width: 100%;
	height: 100%;
	/* box-shadow: 0 0 100rpx rgba(32, 141, 17, 0.568) inset,0 0 20rpx rgb(255, 255, 255) inset; */
}

/* saytoUser */
#saytoUser,
.saytoUser {
	width: 750rpx;
}

view#saytoUser view {
	transition: 2s;
}
/* .open{
   animation: avatar 3s linear infinite;
} */
@keyframes saytoUserMe {
	from {
		transform: scale(0.6)
	}

	to {
		transform: scale(1)
	}
}

#saytoUser text {
	display: block;
	text-align: center;
	margin-top: 0rpx;
	margin-bottom: 20rpx;
	font-size: 28rpx;
}

/* 用户未授权信息显示 */
.saytoUser text {
	display: block;
	text-align: center;
	margin-top: 40rpx;
	font-size: 28rpx;
	color: #1b0000;
}

#saytoUser {
	background: transparent;
	border-radius: 0;
	margin-top: 20rpx;
}

#saytoUser view {
	width: 90%;
	background: transparent;
	margin: 0 auto;
	font-size: 24rpx;
	color: #aaa;
	border-radius: 10rpx;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid rgba(0, 0, 0, 0.089);
	border-top: 2rpx solid rgba(0, 0, 0, 0.089);
}

.double {
	position: fixed;
	bottom: 5%;
	color: rgb(255, 255, 255);
	text-decoration: underline;
}

.double text {
	font-size: 24rpx;
	color: rgb(255, 255, 255);
}

/* Next按键的动画样式 */
/* clickGo */
.clickGo {
	background: black;
	height: 80rpx;
	line-height: 80rpx;
	width: 40%;
	margin: 0 auto;
	border-radius: 40rpx;
	color: white;
	box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.356);
	position: relative;
	display: block;
	margin-bottom: -60rpx !important;
	animation: toHome 5s linear infinite;
	/* animation-delay: 2s; */
}

