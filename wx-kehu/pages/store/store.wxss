/* pages/store/store.wxss */
page {
  background-color: rgba(170, 170, 170, 0.2);
}

swiper {
  height: 1300rpx;
}

/* 选项卡 */
.tab {
  float: left;
  width: 25%;
  text-align: center;
  height: 75rpx;
  line-height: 75rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgb(237, 237, 237);
}

.topTabSwiper {
  zoom: 1;
  font-size: 32rpx;
  color: #000;
  background: #ffffff;
  border-bottom: 1rpx solid rgba(237, 237, 237, 1);
  box-sizing: border-box;
  position: fixed;
  z-index: 999;
  width: 100%;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  box-sizing: content-box;
  color: rgba(0, 126, 233, 1);
}

.tabBorer::after {
  content: "";
  display: block;
  width: 60rpx;
  height: 5rpx;
  position: relative;
  margin: 8rpx auto;
  background: rgba(0, 126, 233, 1);
}

.swiper {
  width: 100%;
}

swiper-item {
  top: 90rpx;
}

.swiper_item {
  min-height: 300rpx;
}

.swiper_con {
  text-align: center;
  width: 100%;
}

.radius {
  border-radius: 50%;
}

/* 主banner图样式 */
.banner {
  width: 100%;
  height: 232rpx;
  padding-top: 30rpx;
  background: #fff;
}

.banner image {
  width: 96%;
  height: 100%;
  border-radius: 12rpx;
}

/* 推荐产品 */
.recommend {
  width: 100%;
  background: #fff;
  padding: 10rpx 0 24rpx 0;
}

.recommend text {
  margin-left: 22rpx;
  border-left: 6rpx solid #3E7BFE;
  padding-left: 10rpx;
  font-size: 28rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
}

.productImg {
  width: 95%;
  margin: 16rpx auto 0;
}

.productImg view {
  width: 162rpx;
  height: 156rpx;
}

.productImg image {
  width: 100%;
  height: 100%;
  border-radius: 10%;
}

/* 商品列表 */
.prolist {
  margin-bottom: 120rpx;
}

.prolist .scroll-item {
  border-top: 1rpx solid #efefef;
  padding: 20rpx;
  background: #fff;
}

.prolist .scroll-item image {
  width: 174rpx;
  height: 158rpx;
}

.item-middle {
  width: 350rpx;
  margin-left: 10rpx;
  text-align: left;
}

.item-middle .title {
  font-size: 32rpx;
  padding-bottom: 40rpx;
}

.item-middle .introduce {
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  white-space: normal;
  margin-bottom: 20rpx;
  color: #4E4C4C;
  letter-spacing: 1rpx;
}

.score view {
  color: #FFA21E;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 3rpx;
}

.score text:last-child {
  color: #C6C6C6;
  font-size: 24rpx;
}

.score.o view {
  font-size: 24rpx;
  white-space: nowrap;
}

/* 订单 */
.status {
  font-size: 24rpx;
  color: #ff0000;
  position: absolute;
  right: 22rpx;
}

.card-bottom {
  width: 100%;
  height: 60rpx;
}

.time {
  height: 100%;
  font-size: 24rpx;
  color: #C6C6C6;
  float: left;
  line-height: 62rpx;
  letter-spacing: 5rpx;
}

.appraise {
  width: 150rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #FF0000;
  border: 1rpx solid #FF0000;
  float: right;
  line-height: 60rpx;
}
