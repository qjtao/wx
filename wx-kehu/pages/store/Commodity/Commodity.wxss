/* minfo */
.minfo {
	width: 750rpx;
	background: rgba(255, 255, 255, 1);
	margin-bottom: 84rpx;
}

.minfoHeader {
	height: 74rpx;
	line-height: 74rpx;
	font-size: 24rpx;
	color: rgba(198, 198, 198, 1);
	text-align: left;
	padding-left: 36rpx;
}

.minfoBody {
	height: auto;
	font-size: 24rpx;
	color: rgba(0, 0, 0, 1);
	text-align: left;
	padding: 0 44rpx 22rpx;
	margin-bottom: calc(59rpx * 2);
}

/* time */
.time {
	position: absolute;
	right: 0;
	text-align: right;
	padding-right: 24rpx;
	font-size: 20rpx;
	line-height: 48rpx;
	color: rgba(102, 101, 101, 1);
	font-family: PingFang-SC-Medium;
	font-weight: Medium;
}
