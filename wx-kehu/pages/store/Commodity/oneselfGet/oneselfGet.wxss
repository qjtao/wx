/* pages/store/Commodity/oneselfGet/oneselfGet.wxss */
/* 下单客户个人信息以及地址 */
.site {
	width: 100%;
	height: 204rpx;
	background: #fff;
}

.storeSite {
	margin-left: 66rpx;
}

.storeSite view:last-child::before {
	width: 18rpx;
	height: 18rpx;
	margin-right: 15rpx;
}

.name {
	font-size: 26rpx;
	margin-right: 50rpx;
}

.place {
	font-size: 30rpx;
	margin-top: 26rpx;
}

/* 订单信息 */
.info {
	width: 100%;
	height: auto;
	background: #fff;
	margin-top: 2rpx;
}

.orderInfo {
	font-size: 26rpx;
	padding: 36rpx 0 30rpx 62rpx;
}

.commodity {
	padding: 0 38rpx 0 62rpx;
}

.commodity image {
	width: 90rpx;
	height: 82rpx;
}

.commodity view:nth-child(2) {
	width: 380rpx;
}

.commodity view:nth-child(2) view {
	font-size: 30rpx;
}

.commodity view:nth-child(2) text {
	color: #FFAF47;
	font-size: 24rpx;
}

/* 数量 */
.number {
	width: 122rpx;
	display: inline-flex;
}

.number view {
	width: 36rpx;
	height: 30rpx;
	border: 1rpx solid #A0A0A0;
	text-align: center;
	width: 40rpx;
	font-size: 26rpx;
	line-height: 30rpx;
	color: #1C1B1B;
}

/* 合计 */
.total {
	font-size: 26rpx;
	text-align: right;
	padding: 40rpx;
}

.score {
	color: #FFAF47;
	margin-left: 10rpx;
}

/* 支付 */
.pay {
	width: 100%;
	height: 104rpx;
	background: linear-gradient(to right, #2090FD, #4676FE);
	position: fixed;
	bottom: 0;
	text-align: center;
	line-height: 104rpx;
	color: #fff;
}
