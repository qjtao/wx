/* pages/Home/Home.wxss */
/* 设置背景颜色 */
/* page {
	background: rgba(237, 237, 237, 1);
} */
.headerStore {
	text-align: left;
	font-size: 28rpx;
	width: 750rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: rgb(255, 255, 255);
	border-bottom: 2rpx solid rgba(126, 126, 126, 0.2);
	box-sizing: border-box;
	display: flex;
	flex-flow: row nowrap;
}

.leftSearch,
.rightSearch {
	font-size: 26rpx;
}

.leftSearch {
	width: 750rpx;
	text-align: left;
	left: 20rpx;
	position: relative;
}

.rightSearch {
	text-align: right;
	position: fixed;
	right: 20rpx;
	top: 0;
	color: rgba(0, 0, 0, 0.8);
	box-sizing: border-box;
	border-radius: 20rpx;
}

/* 设置轮播样式 */
#header_q {
	background: #ffffff;
	width: 750rpx;
	height: 370rpx;
	margin-bottom: 20rpx;
}

/* 轮播图框 */
.banner {
	width: 750rpx;
	height: 370rpx;
	margin: 0 auto;
	border-radius: 10rpx;
	background: #ffffff;
	line-height: 80rpx;
}

/* 轮播下的图片样式 */
.banner image {
	width: 100%;
	height: 300rpx;
	margin-top: 20rpx;
}

/* 承载每个订单的外骨骼框架 */
.card {
	width: 750rpx;
	background: #ffffff;
	border-bottom: 1rpx solid rgba(236, 236, 236, 0.6);
}

/* 首页+项目管理 */
.hr_q {
	width: 750rpx;
	background: rgba(237, 237, 237, 1);
	height: 24rpx;
	top: 498rpx;
}

/* 项目名称栏 */
.body_q {
	width: 750rpx;
	height: 130rpx;
	color: rgb(0, 0, 0);
	display: flex;
	flex-flow: row nowrap;
}

/* 项目管理头像 */
.image_mine {
	width: 90rpx;
	height: 90rpx;
	border: 1rpx solid rgb(236, 236, 236);
	box-sizing: border-box;
	margin-left: 20rpx;
	margin-bottom: 20rpx;
	margin-top: 20rpx;
	margin-right: 20rpx;
	overflow: hidden;
}

/* 项目的头像 */
.image_mine>image {
	width: 90rpx;
	height: 90rpx;
}

/* 设置center文字的样式 */
.body_q_center {
	width: 519rpx;
	font-size: 24rpx;
	height: 24rpx;
	text-align: left;
}

/* 设置right价格 */
.body_q_right {
	text-align: left;
	color: #000000;
	font-size: 32rpx;
	margin-top: 52rpx;
	margin-bottom: 52rpx;
	margin: auto;
}

.body_q_right text {
	margin-left: -20rpx;
}

/* body-center-style */
.text_mine_1 {
	font-size: 28rpx;
	color: #000000;
	margin-top: 22rpx;
	font-family: PingFang-SC-Medium;
}

.text_mine_2 {
	margin-bottom: 9rpx;
	color: #C6C6C6;
	font-size: 24rpx;
	max-width: 500rpx;
	margin-top: 19rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	font-family: PingFang-SC-Regular;
}

/* 选项卡 */
/* 测试顶部导航栏操作 */
.tab {
	float: left;
	width: 50%;
	text-align: center;
	height: 90rpx;
	line-height: 90rpx;
	padding: 10rpx 0;
}

/* 选项卡的样式 */
.topTabSwiper {
	zoom: 1;
	font-size: 28rpx;
	color: rgba(172, 172, 172, 1);
	background: #ffffff;
	border-bottom: 1rpx solid rgba(237, 237, 237, 1);
	box-sizing: border-box;
}

.topTabSwiper:after {
	content: "";
	clear: both;
	display: block;
}

.tabBorer {
	box-sizing: content-box;
	color: rgba(0, 126, 233, 1);
}

.tabBorer::after {
	content: "";
	display: block;
	width: 110rpx;
	height: 5rpx;
	position: relative;
	margin: 8rpx auto;
	background: rgba(0, 126, 233, 1);
}

.swiper {
	width: 100%;
}

.swiper_item {
	min-height: 300rpx;
}

.swiper_con {
	text-align: center;
	width: 100%;
}

.radius {
	border-radius: 50%;
}

.info_user_name {
	color: rgba(255, 162, 30, 1);
}

/* 跳转信息 */
.body_q_end {
	line-height: 130rpx;
	color: rgba(172, 172, 172, 1);
}

/* 医生职位 */
.info_user_s {
	color: rgba(198, 198, 198, 1);
	font-size: 24rpx;
	text-align: left;
	font-family: PingFang-SC-Medium;
}

/* ... */
.body_q_end>image {
	width: 16rpx;
	height: 28rpx;
	margin-right: 11rpx;
}

.ss {
	display: inline;
}

/* 轮播图样式 */
.boxshadow {
	box-shadow: 0 5rpx 40rpx rgba(0, 0, 0, 0.39);
	width: 710rpx !important;
	margin-left: 20rpx;
	height: 300rpx;
	overflow: hidden;
	border-radius: 10rpx;
}

/* 装载所有的轮播图 */
.dots {
	height: 20rpx;
	display: flex;
	flex-flow: row nowrap;
	position: absolute;
	align-items: center;
	justify-items: center;
	left: calc(50% + 20rpx);
	margin-top: -25rpx;
	transform: translateX(-50%);
}

/*未选中时的小圆点样式 */
.dot {
	margin: 0 auto;
	width: 10rpx;
	height: 10rpx;
	border-radius: 50%;
	margin-right: 26rpx;
	background-color: rgba(172, 172, 172, 1);
}

/*选中以后的小圆点样式  */
.active {
	background-color: rgba(0, 126, 233, 1);
}
