/* pages/home/payResult/payResult.wxss */
/* 背景色 */
page {
	background: rgba(237, 237, 237, 1);
	font-size: calc(14rpx * 2);
	font-family: PingFang-SC-Medium;
}

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: calc(48rpx * 2) 0 calc(25rpx * 2);
	box-sizing: border-box;
	background: rgba(255, 255, 255, 1);
	margin-top: calc(10rpx * 2);
}

.img {
	width: calc(97rpx * 2);
	height: calc(97rpx * 2);
	margin-bottom: calc(18rpx * 2);
	border-radius: 50%;
	overflow: hidden;
}

.img .iconfont {
	font-size: calc(97rpx * 2);
	display: inline-block;
}

.img .icon-success {
	color: rgba(62, 123, 254, 1);
}

.img .icon-error {
	color: rgba(249, 17, 49, 1);
}

.title {
	font-size: calc(16rpx * 2);
	margin-bottom: calc(10rpx * 2);
}

.jump {
	font-size: calc(12rpx * 2);
}

.share {
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, .5);
	position: absolute;
	top: 0;
	z-index: 1000;
	display: flex;
	align-items: center;
	justify-content: center;
}

.share .content {
	position: absolute;
}

.share .content>image {
	min-width: calc(296rpx * 2);
	position: relative;
	display: block;
}

.share .content .btn {
	position: absolute;
	bottom: calc(20rpx * 2);
	border: 4rpx solid rgba(50, 56, 23, 1);
	background: rgba(255, 216, 0, 1);
	padding: calc(4rpx * 2);
	border-radius: calc(4rpx * 2);
	display: flex;
	align-items: center;
}

.share .content .btn image {
	width: calc(16rpx * 2);
	height: calc(16rpx * 2);
}

.share .content .item {
	left: calc(30rpx * 2);
}

.share .content .doc {
	right: calc(30rpx * 2);
}

.close {
	width: calc(50rpx * 2);
	height: calc(50rpx * 2);
	position: absolute;
	bottom: calc(-70rpx * 2);
	left: 0;
	right: 0;
	margin: auto;
	border: 2rpx solid rgba(255, 255, 255, 1);
	border-radius: 50%;
	color: rgba(255, 255, 255, 1);
	font-size: calc(26rpx * 2);
	display: flex;
	align-items: center;
	justify-content: center;
}
